<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroMarcas.css">
    <title>Registro de Marcas</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Marcas</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/camion.svg" alt="">
            </div>
            <form class="form-inline d-flex needs-validation" method="post" action="" novalidate>
                <div id="BmenuUno" class="border d-flex">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Información de la Marca</label>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputNombreMarca" name="inputNombreMarca" type="text" class="form-control"
                                placeholder="Nombre" required>
                        </div>

                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectNacionalidad" name="inputSelectNacionalidad"
                                required>
                                <option value="">Nacionalidad</option>
                                {{#each nacionalidad}}
                                <option value="{{codPais}}">{{nomPais}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <textarea id="inputDescripcion" type="text" name="inputDescripcion" class="form-control"
                                placeholder="Descripción" aria-label="With textarea" required></textarea>
                        </div>
                        <div class="d-flex MAXWandH">
                            <div class="d-flex">
                                <label>Foto</label>
                                <div><button type="button" class="btn"><img style="width: 3rem; height: 3rem;"
                                            src="/images/Lupa.svg" alt=""></button></div>
                            </div>
                            <div class="MAXWandH">
                                <input type="text" class="MAXWandH" placeholder="" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="BmenuDos" class="border d-flex">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Información del Contacto</label>
                        </div>

                        <div class="col-md-4 mb-3">
                            <input id="inputNombreEmpresa" name="inputNombreEmpresa" type="text" class="form-control"
                                placeholder="Nombre de la Empresa" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <textarea id="inputDescripcionE" name="inputDescripcionE" class="form-control"
                                placeholder="Detalle de la Empresa" type="text" aria-label="With textarea"
                                required></textarea>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputTelefono" name="inputTelefono" type="number" class="form-control"
                                placeholder="Telefono de la Empresa" required>
                        </div>
                        <div class="d-flex MAXWandH">
                            <div class="d-flex">
                                <label>Foto</label>
                                <div><button type="button" class="btn"><img style="width: 3rem; height: 3rem;"
                                            src="/images/Lupa.svg" alt=""></button></div>
                            </div>
                            <div class="MAXWandH">
                                <input type="text" class="MAXWandH" placeholder="" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertBufet" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaMarcas/listarAllMarcas"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>

                </div>
            </form>
        </div>
    </div>

    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertBufet");




        function limpiarInputs() {
            document.getElementById("inputNombreMarca").value = "";
            document.getElementById("inputDescripcion").value = "";
            document.getElementById("inputNombreEmpresa").value = "";
            document.getElementById("inputDescripcionE").value = "";
            document.getElementById("inputTelefono").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            btnInsertar.setAttribute("formaction", "../RegistroMarcas/insertarMarca")
            btnInsertar.setAttribute("type", "submit");

        }

    </script>

    <script src="/javascripts/alertas.js"></script>
    <script src="/javascripts/validaciones.js"></script>
</body>

</html>