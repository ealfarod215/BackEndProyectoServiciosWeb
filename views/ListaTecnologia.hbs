<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaTecnologia.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Tecnologia</title>
</head>

<body>

    <h1 class="text-center align-content-center">Lista de Tecnologia</h1>
    <div id="SeccionPrincipalBC" class="container d-flex ">

        <div id="LSectionBC" class="">
            <img class="LogoBC" src="/images/monitor.svg" alt="">
        </div>
        <div id="RSectionBC" class="border">
            <div id="headerListSection" class="d-flex border">
                <div class="d-flex headerSideSize">
                    <div class="marginL displayGrid">
                        <a href="/ListaTecnologia/listarAllTecnologia"><button class="marginIconos "><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/recargar.svg"
                                    alt=""></button></a>
                        <!--boton que llama a la funcion limpiar-->
                        <button id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img
                                style="width: 2.5rem; height: 2.5rem;" src="/images/escoba.svg" alt=""></button>
                    </div>
                    <div class="displayGrid ">
                        <a href="/RegistroTecnologia">
                            <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/mas.svg" alt=""></button>
                        </a>

                        <a href="/VentanaProductos"><button class="marginIconos"><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/error.svg" alt=""></button>
                        </a>

                    </div>

                </div>
                <div id="littleForm">
                    <form class="form-inline container displayGrid headerMidleSize" method="post"
                        action="/ListaTecnologia/filtrarLista">
                        <div class="d-flex headerMidleSize">
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputCodTec" name="inputCodTec"
                                        placeholder="Digite el Codigo">
                                </div>
                            </div>
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomTec" name="inputNomTec"
                                        placeholder="Digite el Nombre">
                                </div>
                            </div>
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomTecRes" name="inputNomTecRes"
                                        placeholder="Nombre del Restaurante">
                                </div>
                            </div>
                            <div class="marginL displayGrid">

                                <!--llama al post para realizar busqueda-->
                                <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                        style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                        alt=""></button>

                                <!--Cargar post para eliminar registro de buffet-->
                                <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                    class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                        src="/images/menos.svg" alt=""></button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <div id="bodyListSection">

                <div id="listViewRest" class="border">
                    <div id="mostrarContenidoBC" class="overflow-auto">
                        <table class="table table-hover" style="width:100%; height:auto;">
                            <thead>
                                <tr>
                                    <th>Cod√≠go</th>
                                    <th>Consecutivo</th>
                                    <th>Nombre</th>
                                    <th>Cantidad</th>
                                    <th>Restaurante</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recordset}}
                                <tr>
                                    <td>{{codigo}} </td>
                                    <td>TEC-{{consecutivo}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{cantidad}}</td>
                                    <td>{{restaurante}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <h1 style="text-align: center; color: red;">{{mensaje}}</h1>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodTec").value = "";
            document.getElementById("inputNomTec").value = "";
            document.getElementById("inputNomTecRes").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {


            if (document.getElementById("inputCodTec").value == "" || document.getElementById("inputNomTec").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnEliminar.setAttribute("formaction", "../ListaTecnologia/eliminarRestRegistro")
                btnEliminar.setAttribute("type", "submit");

            }
        }

    </script>
</body>

</html>