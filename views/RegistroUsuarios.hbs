<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroUsuarios.css">
    <title>Registro de Usuarios</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Usuarios</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/usuario.svg" alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">

                <div id="BmenuUno" class="border d-flex">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Informaci칩n del Usuario</label>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputNombreUsuario" name="inputNombreUsuario" type="text" class="form-control"
                                placeholder="Nombre">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputApellidoUno" name="inputApellidoUno" type="text" class="form-control"
                                placeholder="Primer Apellido">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputApellidoDos" type="text" class="form-control" name="inputApellidoDos"
                                placeholder="Segundo Apellido">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputTelFijo" name="inputTelFijo" type="text" class="form-control"
                                placeholder="Telefono Fijo">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputTelCel" name="inputTelCel" type="text" class="form-control"
                                placeholder="Telefono Celular">
                        </div>

                    </div>
                </div>
                <div id="BmenuDos" class="border d-flex">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Datos Tecnicos del Usuario</label>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputLogin" name="inputLogin" type="text" class="form-control"
                                placeholder="Login">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputClave" name="inputClave" type="text" class="form-control"
                                placeholder="Contrase침a">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputConfirmarClave" name="inputConfirmarClave" type="text" class="form-control"
                                placeholder="Confirmar Contrase침a">
                        </div>

                        <div class="d-block ">
                            <div><label for="">Privilegios</label></div>
                            <div class="d-flex ">
                                <input id="inputprivilegios" name="inputprivilegios" type="hidden" class="form-control">
                                <div class="col-md-4 mb-3">
                                    <input id="inputAdmSistema" name="inputAdmSistema" type="checkbox"
                                        class="form-control">
                                    <label for="">Administrador del Sistema</label>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <input id="inputAdmSeguridad" name="inputAdmSeguridad" type="checkbox"
                                        class="form-control">
                                    <label for="">Administrador de Seguridad</label>
                                </div>
                            </div>
                            <div class="d-flex ">
                                <div class="col-md-4 mb-3">
                                    <input id="inputAdmRestaurante" name="inputAdmRestaurante" type="checkbox"
                                        class="form-control">
                                    <label for="">Administrador del Restaurante</label>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <input id="inputAdmCuentas" name="inputAdmCuentas" type="checkbox"
                                        class="form-control">
                                    <label for="">Administrador de Cuentas</label>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>


                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertUsuarios" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaUsuarios/listarAllUsuarios"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertUsuarios");
        var checkSistema = document.getElementById("inputAdmSistema");
        var checkSeguridad = document.getElementById("inputAdmSeguridad");
        var checkRestaurante = document.getElementById("inputAdmRestaurante");
        var checkCuentas = document.getElementById("inputAdmCuentas");
        var inputConfirmarClave = document.getElementById("inputConfirmarClave");
        var inputClave = document.getElementById("inputClave");


        checkCuentas.addEventListener('click', () => {
            document.getElementById("inputprivilegios").value = 1;
            checkSistema.checked = false;
            checkSeguridad.checked = false;
            checkRestaurante.checked = false;

        });
        checkSistema.addEventListener('click', () => {
            document.getElementById("inputprivilegios").value = 2;
            checkSeguridad.checked = false;
            checkRestaurante.checked = false;
            checkCuentas.checked = false;

        });
        checkSeguridad.addEventListener('click', () => {
            document.getElementById("inputprivilegios").value = 3;
            checkSistema.checked = false;
            checkRestaurante.checked = false;
            checkCuentas.checked = false;

        });
        checkRestaurante.addEventListener('click', () => {
            document.getElementById("inputprivilegios").value = 4;
            checkSistema.checked = false;
            checkSeguridad.checked = false;
            checkCuentas.checked = false;

        });

        function limpiarInputs() {
            document.getElementById("inputNombreUsuario").value = "";
            document.getElementById("inputApellidoUno").value = "";
            document.getElementById("inputApellidoDos").value = "";
            document.getElementById("inputTelFijo").value = "";
            document.getElementById("inputTelCel").value = "";
            document.getElementById("inputLogin").value = "";
            document.getElementById("inputAdmSistema").checked = false;
            document.getElementById("inputAdmSeguridad").checked = false;
            document.getElementById("inputAdmRestaurante").checked = false;
            document.getElementById("inputAdmCuentas").checked = false;
            document.getElementById("inputClave").value = "";
            document.getElementById("inputConfirmarClave").value = "";
            alert("Caja de Texto limpia.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombreUsuario").value == "" || document.getElementById("inputApellidoUno").value == ""
                || document.getElementById("inputApellidoDos").value == "" || document.getElementById("inputTelFijo").value == ""
                || document.getElementById("inputTelCel").value == "" || document.getElementById("inputLogin").value == ""
                || document.getElementById("inputClave").value == "" || document.getElementById("inputConfirmarClave").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else if (inputClave.value != inputConfirmarClave.value) {
                alert("Las contrase침as deben coincidir!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroUsuarios/insertarUsuarios")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>

    <script src="/javascripts/alertas.js"></script>
</body>

</html>