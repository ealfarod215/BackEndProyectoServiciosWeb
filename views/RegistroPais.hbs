<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroPais.css">
    <title>Registro de País</title>
</head>

<body class="container-fluid">
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de País</h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/equipo.svg" alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Información del País</label>
                        </div>
                       <!-- <div class="col-md-4 mb-3">
                            <input id="inputCodPais" name="inputCodPais" type="text" 
                            class="form-control" <!placeholder="P-"{{codigo+1}} readonly>
                        </div>--> 
                        <div class="col-md-4 mb-3">
                            <input id="inputNombrePais" name="inputNombrePais" type="text" 
                            class="form-control" placeholder="Nombre del País">
                        </div>
                        
                    </div>
                </div>
                <div id="BmenuDos">
                    <div class="displayGrid MAXWandH">
                        <label>Bandera del País</label>
                        <div class="MAXWandH">
                            <input id="inputFotoPais" name="inputFotoPais"
                            type="text" class="MAXWandH" placeholder="">
                        </div>
                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertPais" name="btnConfirmarInsertPais" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaPaises/listarAllPaises"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                    <button type="button" class="btn"><img style="width: 3rem; height: 3rem;"
                                src="/images/Lupa.svg" alt=""></button>
                </div>
            </form>
        </div>
    </div>
<script>
        var btnInsertar = document.getElementById("btnConfirmarInsertPais");
        var imagen= document.getElementById("inputFotoPais");

        function limpiarInputs() {
            document.getElementById("inputNombrePais").value = "";
            document.getElementById("inputFotoPais").value = "";
            alert("Cajas limpias.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombrePais").value == "" 
            || document.getElementById("inputFotoPais").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroPais/insertarPais")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>

    
</body>

</html>