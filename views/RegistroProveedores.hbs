<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroProveedores.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Registro Clientes en Barra</title>
</head>

<body>

    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Proveedores</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div id="SeccionPrincipalLR" class="container d-flex border">
        <div id="LSectionListaComidaBufet" class="">
            <img style="width: 80%; height: 60%;" class="LogoCEB" src="/images/proveedores.svg" alt="">
        </div>
        <form action="" class="needs-validation displayGrid MAXWandH" method="post" action="" novalidate>

            <div class="">
                <label>Información del Proveedor</label>
            </div>

            <div class="col-md-12 mb-3">
                <input id="inputCedula" name="inputCedula" type="number" class="form-control"
                    placeholder="Cédula de Identidad" required>
            </div>
            <div class="col-md-12 mb-3">
                <input id="inputFecha" name="inputFecha" type="date" class="form-control" placeholder="Fecha de Ingreso"
                    required>
            </div>
            <div class="col-md-12  mb-3">
                <input id="inputNombre" name="inputNombre" type="text" class="form-control"
                    placeholder="Nombre del Proveedor" required>
            </div>
            <div class="col-md-12  mb-3">
                <input id="inputPrimerA" name="inputPrimerA" type="text" class="form-control"
                    placeholder="Primer Apellido" required>
            </div>
            <div class="col-md-12  mb-3">
                <input id="inputSegundoA" name="inputSegundoA" type="text" class="form-control"
                    placeholder="Segundo Apellido" required>
            </div>
            <div class="col-md-12  mb-3">
                <input id="inputCorreo" name="inputCorreo" type="email" class="form-control"
                    placeholder="Correo electrónico" required>
            </div>
            <div class="col-md-12  mb-3">
                <textarea id="inputDireccion" name="inputDireccion" type="text" class="form-control"
                    placeholder="Dirección" aria-label="With textarea" required></textarea>
            </div>
            <div class="">
                <label for=""> Telefonos</label>
            </div>

            <div class="col-md-12  mb-3">
                <input id="inputOficina" name="inputOficina" type="number" class="form-control" placeholder="Oficina"
                    required>

            </div>
            <div class="col-md-12  mb-3">
                <input id="inputFax" name="inputFax" type="number" class="form-control" placeholder="Fax" required>

            </div>
            <div class="col-md-12  mb-3">
                <input id="inputCelular" name="inputCelular" type="number" class="form-control" placeholder="Celular"
                    required>

            </div>

            <div id="botonesLogin" class="d-flex">
                <!--llamar funcion para limpiar textbox-->
                <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                        style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                <!--llamar post para realizar el insert-->
                <button id="btnConfirmarInsertBufet" type="button" class="btn" onclick="llamadoInsertarFunction()"><img
                        style="width: 3rem; height: 3rem;" src="/images/confirmacion.svg" alt=""></button>

                <!--llamar get para regresar a la pagina de listado-->
                <a href="/ListaProveedores/listarAllProveedores"><button type="button" class="btn"><img
                            style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                </a>
            </div>
        </form>

    </div>

    <script>

        var btnInsertar = document.getElementById("btnConfirmarInsertBufet");




        function limpiarInputs() {

            document.getElementById("inputCedula").value = "";
            document.getElementById("inputFecha").value = "";
            document.getElementById("inputNombre").value = "";
            document.getElementById("inputPrimerA").value = "";
            document.getElementById("inputSegundoA").value = "";
            document.getElementById("inputCorreo").value = "";
            document.getElementById("inputDireccion").value = "";
            document.getElementById("inputOficina").value = "";
            document.getElementById("inputFax").value = "";
            document.getElementById("inputCelular").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            btnInsertar.setAttribute("formaction", "../RegistroProveedores/insertarProveedor")
            btnInsertar.setAttribute("type", "submit");
            
        }

    </script>

    <script src="/javascripts/alertas.js"></script>
    <script src="/javascripts/validaciones.js"></script>

</body>

</html>