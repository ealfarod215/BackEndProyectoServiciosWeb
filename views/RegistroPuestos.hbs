<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/Puestos.css">
    <title>Registro de Puestos</title>
</head>

<body>

    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Puestos</h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/escritoriopuesto.svg" alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Informaci√≥n del Puesto</label>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputNombrePuesto" name="inputNombrePuesto" type="text" class="form-control"
                                placeholder="Nombre">
                        </div>
                        <div class="form-group  ">
                            <input id="inputInternoAlRestaurante" name="inputInternoExterno" type="radio" value="">
                            <label for="">Interno al Restaurante</label>

                            <input id="inputExternoAlRestaurante" name="inputInternoExterno" type="radio" value="">
                            <label for="">Externo al Restaurante</label>

                        </div>
                        <div class="col-md-4 mb-3 d-flex">
                            <input id="adentro" name="adentro" type="text" class="form-control" placeholder="Opcion"
                                disabled="true">
                            <input id="afuera" name="afuera" type="text" class="form-control" placeholder="Opcion"
                                disabled="true">
                        </div>
                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectRoles" name="inputSelectRoles">
                                <option selected>Rol en el Restaurante</option>
                                <option value="1">Camarero</option>
                                <option value="2">Chef Secundario</option>
                                <option value="3">Camarero secundario</option>
                                <option value="4">Conserje</option>
                            </select>
                        </div>

                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertPuestos" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaPuestos/listarAllPuestos"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertPuestos");
        var dentro = document.getElementById("inputInternoAlRestaurante");
        var fuera = document.getElementById("inputExternoAlRestaurante");

        dentro.addEventListener('click', () => {
            document.getElementById("adentro").value = "Si";
            document.getElementById("afuera").value = "No";
        });

        fuera.addEventListener('click', () => {
            document.getElementById("adentro").value = "No";
            document.getElementById("afuera").value = "Si";
        });

        function limpiarInputs() {
            document.getElementById("inputNombrePuesto").value = "";
            document.getElementById("adentro").value = "";
            document.getElementById("afuera").value = "";
            document.getElementById("inputInternoAlRestaurante").checked = false;
            document.getElementById("inputExternoAlRestaurante").checked = false;
            alert("Caja de Texto limpia.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombrePuesto").value == "" || document.getElementById("adentro").value == ""
                || document.getElementById("afuera").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroPuestos/insertarPuestos")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>
</body>

</html>