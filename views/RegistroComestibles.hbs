<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroComestibles.css">
    <title>Registro de Comestibles</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Comestibles</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/comestibles.svg" alt="">
            </div>
            <form class="form-inline d-flex border MAXWandH" method="post" action="">
                <div id="BmenuUno" class="container ">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Informaci√≥n del Comestible</label>
                        </div>

                        <div class="col-md-4 mb-3">
                            <input id="inputNombreComestible" name="inputNombreComestible" type="text"
                                class="form-control" placeholder="Nombre">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputCantCompestible" name="inputCantCompestible" type="text"
                                class="form-control" placeholder="Cantidad">
                        </div>
                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectTipoComestible"
                                name="inputSelectTipoComestible">
                                <option selected>Tipo de Comestible</option>
                                {{#each tipoComestible}}
                                <option value="{{codTbTipCom}}">{{nomTbTipCom}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputNombreRest" name="inputNombreRest">
                                <option selected>Restaurante</option>
                                {{#each restaurante}}
                                <option value="{{codRes}}">{{nomRes}}</option>
                                {{/each}}
                            </select>
                        </div>

                    </div>
                </div>
                <div id="BmenuDos">
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectMarca" name="inputSelectMarca">
                            <option selected>Marca</option>
                            {{#each marca}}
                            <option value="{{codMarca}}">{{nomMarca}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectClaseComestible" name="inputSelectClaseComestible">
                            <option selected>Clase de Comestible</option>
                            {{#each claseCamestible}}
                            <option value="{{codClaseComestible}}">{{nomClaseComestible}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectLineaComestible" name="inputSelectLineaComestible">
                            <option selected>Linea de Comestible</option>
                            {{#each lineaComestible}}
                            <option value="{{codLineaComestible}}">{{nomLineaComestible}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectUnidadMedida" name="inputSelectUnidadMedida">
                            <option selected>Unidad de Medida</option>
                            {{#each unidadMedida}}
                            <option value="{{codUM}}">{{unidad}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertBufet" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaComestibles/listarAllComestibles"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                    <button type="button" class="btn"><img style="width: 3rem; height: 3rem;" src="/images/Lupa.svg"
                            alt=""></button>

                </div>
            </form>
        </div>
    </div>

    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertBufet");
        var checkBoxPBotella = document.getElementById("checkPrecioBotella");
        var checkBoxPUnitario = document.getElementById("checkPrecioUnitario");

        checkBoxPBotella.addEventListener('click', () => {
            document.getElementById("inputPrecioBotella").disabled = false;
        });

        checkBoxPUnitario.addEventListener('click', () => {
            document.getElementById("inputPrecioUnitario").disabled = false;
        });



        function limpiarInputs() {

            document.getElementById("inputNombreComestible").value = "";
            document.getElementById("inputCantCompestible").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            if (document.getElementById("inputNombreComestible").value == "" || document.getElementById("inputCantCompestible").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                alert("Realizo el post");
                btnInsertar.setAttribute("formaction", "../RegistroComestibles/insertarComestible")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>

    <script src="/javascripts/alertas.js"></script>
</body>

</html>