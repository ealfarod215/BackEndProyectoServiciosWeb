                            </select>
                        </div>

                    </div>
                </div>
                <div id="BmenuDos">
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectMarca">
                            <option selected>Marca</option>
                            <option value="1">ejemplo</option>
                            <option value="2">ejemplo 2</option>
                            <option value="3">ejemplo 3</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectClaseComestible">
                            <option selected>Clase de Comestible</option>
                            <option value="1">ejemplo</option>
                            <option value="2">ejemplo 2</option>
                            <option value="3">ejemplo 3</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <select class="custom-select" id="inputSelectLineaComestible">
                            <option selected>Linea de Comestible</option>
                            <option value="1">ejemplo</option>
                            <option value="2">ejemplo 2</option>
                            <option value="3">ejemplo 3</option>
