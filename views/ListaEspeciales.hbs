<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaEspeciales.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Especiales</title>
</head>

<body>
    <div id="SeccionPrincipalEsp" class="container d-flex border">
        <div id="LSectionEsp" class="">
            <img class="LogoEsp" src="/images/plato-de-servir.svg" alt="">
        </div>
        <div id="RSectionEsp" class="border">
            <div id="headerListSection" class="d-flex border">
                <div class="displayGrid headerSideSize">
                    <div class="marginL">
                         <!--llama al get para recargar la informacion de la tabla-->
                        <a href="/ListaEspeciales/listarAllEspeciales"> 
                        <button class="marginIconos "><img style="width: 2.5rem; height: 2.5rem;"
                                src="/images/recargar.svg" alt=""></button></a>
                        <!--boton que llama a la funcion limpiar-->
                        <button id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                src="/images/escoba.svg" alt=""></button>
                    </div>
                    <div class="marginL">
                       <a href="/Especialidades"><button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                src="/images/error.svg" alt=""></button>
                    </a>
                          <a href="/RegistroEpeciales">
                            <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/mas.svg" alt=""></button>
                        </a>
                    </div>
                </div>
                <div id="littleForm">
                      <form id="frmEspeciales" method="post" action="/ListaEspeciales/filtrarLista"
                      class="form-inline container displayGrid headerMidleSize">
                        <div class="d-flex headerMidleSize">
                            <div class="marginIconos">
                                   <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputCodEsp"
                                       name="inputCodEsp" placeholder="Codigo Especialidades">
                                </div>
                            </div>
                            <div class="marginIconos">
                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomEsp"
                                      name="inputNomEsp"  placeholder="Nombre Especialidades">
                                </div>
                            </div>
                             <div class="displayGrid">
                               
                                   <!--llama al post para realizar busqueda-->
                                <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                        style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                        alt=""></button>

                                <!--Cargar post para eliminar registro de buffet-->
                                <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                    class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                        src="/images/menos.svg" alt=""></button>


                            </div>

                        </div>
                    </form>
               </div>
            </div>
            <div id="bodyListSection">

                <div id="listViewEsp" class="border">
                    <div id="mostrarContenidoEsp">
                        <table class="table table-hover" style="width:100%; height:auto;">
                            <thead>
                                <tr>
                                    <th>Cod√≠go</th>
                                    <th>Nombre del Platillo</th>
                                    <th>Ingredientes</th>
                                    <th>Precio</th>
                                    <th>Detalle</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recordset}}
                                <tr>
                                    <td>{{codigo}} </td>
                                    <td>{{nombrePlatillo}}</td>
                                    <td>{{ingredientes}}</td>
                                    <td>{{precio}}</td>
                                    <td>{{detalle}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <h1 style="text-align: center; color: red;">{{mensaje}}</h1>


                    </div>
                </div>

            </div>
        </div>
     </div>
    

    <script>
        var formulario = document.getElementById("frmEspeciales");
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodEsp").value = "";
            document.getElementById("inputNomEsp").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {


            if (document.getElementById("inputCodEsp").value == "" || document.getElementById("inputNomEsp").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnEliminar.setAttribute("formaction", "../ListaEspeciales/eliminarEspeciales")
                btnEliminar.setAttribute("type", "submit");

            }
        }


    </script>
</body>

</html>