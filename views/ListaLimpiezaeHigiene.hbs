<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaLimpiezaeHigiene.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Limpieza e Higiene</title>
</head>

<body>

    <h1 class="text-center align-content-center">Lista de Limpieza e Higiene</h1>
    <div id="SeccionPrincipalBC" class="container d-flex ">

        <div id="LSectionBC" class="">
            <img class="LogoBC" src="/images/escobaLimpieza.svg" alt="">
        </div>
        <div id="RSectionBC" class="border">
            <div id="headerListSection" class="d-flex border">
                <div class="d-block">
                    <!--llama al get para recargar la informacion de la tabla-->
                    <a href="/ListaLimpiezaeHigiene/listarAllLimpHigiene"><button class="marginIconos "><img
                                style="width: 2.5rem; height: 2.5rem;" src="/images/recargar.svg" alt=""></button></a>
                    <!--boton que llama a la funcion limpiar-->
                    <button id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img
                            style="width: 2.5rem; height: 2.5rem;" src="/images/escoba.svg" alt=""></button>
                </div>


                <div id="littleForm">
                    <form class="form-inline container displayGrid headerMidleSize needs-validation" method="post"
                        action="/ListaLimpiezaeHigiene/filtrarLista" novalidate>
                        <div class="d-flex ">
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="number" class="form-control" id="inputCodLyH" name="inputCodLyH"
                                        placeholder="Digite el Codigo" required>
                                </div>
                            </div>
                            <div class="marginIconos">
                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomLyH" name="inputNomLyH"
                                        placeholder="Digite el Nombre" required>
                                </div>
                            </div>
                            <div class="marginIconos">
                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomLyHRest" name="inputNomLyHRest"
                                        placeholder="Nombre Restaurante" required>
                                </div>
                            </div>
                            <div class=" d-block">

                                <!--llama al post para realizar busqueda-->
                                <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                        style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                        alt=""></button>

                                <!--Cargar post para eliminar registro de buffet-->
                                <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                    class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                        src="/images/menos.svg" alt=""></button>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="displayGrid ">
                    <a href="/RegistroLimpiezaeHigiene/listarInfoDropMenus">
                        <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;" src="/images/mas.svg"
                                alt=""></button>
                    </a>

                    <a href="/VentanaProductos"><button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                src="/images/error.svg" alt=""></button>
                    </a>

                </div>
            </div>
            <div id="bodyListSection" class="overflow-auto">


                <table class="table table-hover" style="width:100%; height:auto;">
                    <thead>
                        <tr>
                            <th>Cod√≠go</th>
                            <th>Consecutivo</th>
                            <th>Nombre</th>
                            <th>Cantidad</th>
                            <th>Restaurante</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recordset}}
                        <tr>
                            <td>{{codigo}} </td>
                            <td>LH-{{consecutivo}}</td>
                            <td>{{nombre}}</td>
                            <td>{{cantidad}}</td>
                            <td>{{restaurante}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <h1 style="text-align: center; color: #A94442; border-radius: 1rem; background-color: #F3DEDE; ">
                    {{mensaje}}</h1>
            </div>
        </div>

    </div>


    <script>
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodLyH").value = "";
            document.getElementById("inputNomLyH").value = "";
            document.getElementById("inputNomLyHRest").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {

            btnEliminar.setAttribute("formaction", "../ListaLimpiezaeHigiene/eliminarRestRegistro")
            btnEliminar.setAttribute("type", "submit");
        }


    </script>

    <script src="/javascripts/validaciones.js"></script>
</body>

</html>