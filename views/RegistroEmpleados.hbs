<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroEmpleados.css">
    <title>Registro Empleados</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Empleados</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/empleado (2).svg" alt="">
            </div>
            <form class="form-inline d-flex needs-validation" method="post" action="" novalidate>
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label class="smd-8 mb-4">Información del Personal</label>
                            <!--AGREGAR CLASE A TITULOS-->
                        </div>
                        <div class="col-md-8 mb-3">
                            <input id="inputCedulaEmpleado" name="inputCedulaEmpleado" type="number"
                                class="form-control" placeholder="Cédula" required>
                        </div>
                        <div class="col-md-8 mb-3">
                            <input id="inputNombreEmpleado" name="inputNombreEmpleado" type="text" class="form-control"
                                placeholder="Nombre" required>
                        </div>
                        <div class="col-md-8 mb-3">

                            <input id="inputApellidoUnoEmpleado" name="inputApellidoUnoEmpleado" type="text"
                                class="form-control " placeholder="Primer Apellido" required>
                        </div>
                        <div class="col-md-8 mb-3">

                            <input id="inputApellidoDosEmpleado" name="inputApellidoDosEmpleado" type="text"
                                class="form-control " placeholder="Segundo Apellido" required>
                        </div>
                        <div class="col-md-8 mb-3">

                            <input id="inputTelefonoUnoEmpleado" name="inputTelefonoUnoEmpleado" type="number"
                                class="form-control " placeholder="Teléfono 1" required>
                        </div>
                        <div class="col-md-8 mb-3">

                            <input id="inputTelefonoDosEmpleado" name="inputTelefonoDosEmpleado" type="number"
                                class="form-control " placeholder="Teléfono 2" required>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <select class="custom-select" id="inputSelectPuesto" name="inputSelectPuesto" required>
                                <option value="">Puesto</option>
                                {{#each puestoEmp}}
                                <option value="{{codPuesto}}">{{nomPuesto}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <select class="custom-select" id="inputSelectNacionalidad" name="inputSelectNacionalidad"
                                required>
                                <option value="">Nacionalidad</option>
                                {{#each nacionalidad}}
                                <option value="{{codPais}}">{{nomPais}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <select class="custom-select " id="inputSelectRestaurante" name="inputSelectRestaurante"
                                required>
                                <option value="">Restaurante</option>
                                {{#each restaurante}}
                                <option value="{{codRes}}">{{nomRes}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div id="BmenuDos">
                    <label>Foto del Empleado</label>
                    <div class="displayGrid MAXWandH">
                        <div class="MAXWandH">
                            <input type="text" class="MAXWandH" placeholder="" readonly>
                        </div>
                    </div>

                </div>

                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertEmpleados" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaEmpleados/listarAllEmpleados"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertEmpleados");

        function limpiarInputs() {
            document.getElementById("inputCedulaEmpleado").value = "";
            document.getElementById("inputNombreEmpleado").value = "";
            document.getElementById("inputApellidoUnoEmpleado").value = "";
            document.getElementById("inputApellidoDosEmpleado").value = "";
            document.getElementById("inputTelefonoUnoEmpleado").value = "";
            document.getElementById("inputTelefonoDosEmpleado").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            btnInsertar.setAttribute("formaction", "../RegistroEmpleados/insertarEmpleados")
            btnInsertar.setAttribute("type", "submit");

        }

    </script>

    <script src="/javascripts/alertas.js"></script>
    <script src="/javascripts/validaciones.js"></script>
</body>

</html>