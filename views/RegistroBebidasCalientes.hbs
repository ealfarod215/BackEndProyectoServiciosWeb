<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroBebidasCalientes.css">

    <title>Bebidas Calientes</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Bebidas Calientes</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/taza-de-cafe.svg" alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Información de la Bebida</label>
                        </div>

                        <div class="col-md-4 mb-3">
                            <input id="inputNombreBebida" name="inputNombreBebida" type="text" class="form-control"
                                placeholder="Nombre">
                        </div>
                        <div class="col-md-4 mb-3">
                            <textarea id="inputIngredientesBebida" name="inputIngredientesBebida" class="form-control"
                                placeholder="Ingredientes" aria-label="With textarea"></textarea>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputPrecioBebida" name="inputPrecioBebida" type="text" class="form-control"
                                placeholder="Precio">
                        </div>
                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputNombreRest" name="inputNombreRest">
                                <option selected>Restaurante</option>
                                {{#each restaurante}}
                                <option value="{{codRes}}">{{nomRes}}</option>

                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <textarea id="inputDescripcion" name="inputDescripcion" class="form-control"
                                placeholder="Descripción" aria-label="With textarea"></textarea>
                        </div>
                    </div>
                </div>
                <div id="BmenuDos">
                    <div class="displayGrid MAXWandH">
                        <label>Foto del la Bebida</label>
                        <div class="MAXWandH">
                            <input type="text" class="MAXWandH" placeholder="">
                        </div>
                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertBufet" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaBebidasCalientes/listarAllBebidasCalientes"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                    <button type="button" class="btn"><img style="width: 3rem; height: 3rem;" src="/images/Lupa.svg"
                            alt=""></button>
                </div>
            </form>
        </div>
    </div>
    </div>

    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertBufet");




        function limpiarInputs() {
            document.getElementById("inputNombreBebida").value = "";
            document.getElementById("inputIngredientesBebida").value = "";
            document.getElementById("inputPrecioBebida").value = "";
            document.getElementById("inputDescripcion").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombreBebida").value == "" || document.getElementById("inputIngredientesBebida").value == ""
                || document.getElementById("inputPrecioBebida").value == "" || document.getElementById("inputDescripcion").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroBebidasCalientes/insertarBebidaCaliente")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>
    <script src="/javascripts/alertas.js"></script>
</body>

</html>