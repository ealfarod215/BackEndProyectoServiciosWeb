<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaClientes.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Clientes</title>
</head>

<body>

    <div id="SeccionPrincipalBC" class="container d-flex border">

        <div id="LSectionBC" class="">
            <img class="LogoBC " src="/images/hombre.svg">
        </div>
        <div id="RSectionBC" class="border">
            <div id="headerListSection" class="d-flex border">

                <div id="littleForm" class="d-flex ">
                    <div class="marginL d-block">
                        <!--llama al get para recargar la informacion de la tabla-->
                        <a href="/ListaClientes/listarAllClientes">
                            <button class="marginIconos "><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/recargar.svg" alt=""></button></a>
                        <!--boton que llama a la funcion limpiar-->
                        <button id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img
                                style="width: 2.5rem; height: 2.5rem;" src="/images/escoba.svg" alt=""></button>


                        <a href="/Funcionalidades"><button class="marginIconos"><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/error.svg" alt=""></button>
                        </a>

                    </div>
                    <form id="frmClientes" method="post" action="/ListaClientes/filtrarLista"
                        class="form-inline container displayGrid headerMidleSize">
                        <div class="d-flex headerMidleSize ">
                            <div class="marginIconos d-flex">
                                <div class="marginIconos">
                                    <div class="input-group input-group-sm mb-3   ">
                                        <input type="text" class="form-control" id="inputCodC" name="inputCodC"
                                            placeholder="Codigo del Cliente">
                                    </div>
                                </div>
                                <div class="marginIconos">
                                    <div class="input-group input-group-sm mb-3   ">
                                        <input type="text" class="form-control" id="inputNomC" name="inputNomC"
                                            placeholder="Nombre del Cliente">
                                    </div>
                                </div>
                                <div class="marginIconos">
                                    <div class="input-group input-group-sm mb-3   ">
                                        <input type="text" class="form-control" id="inputNomRe" name="inputNomRe"
                                            placeholder="Nombre del Restaurante">
                                    </div>
                                </div>

                            </div>

                            <div class="displayGrid">

                                <!--llama al post para realizar busqueda-->
                                <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                        style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                        alt=""></button>

                                <!--Cargar post para eliminar registro de buffet-->
                                <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                    class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                        src="/images/menos.svg" alt=""></button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div id="bodyListSection">
                <div id="listViewRest" class="border">
                    <div id="mostrarContenidoBC" class="overflow-auto">
                        <table class="table table-hover" style="width:100%; height:auto;">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Consecutivo</th>
                                    <th>Nombre</th>
                                    <th>Monto Pagado</th>
                                    <th>Detalle</th>
                                    <th>Fecha</th>
                                    <th>Reservaci√≥n</th>
                                    <th>Barra</th>
                                    <th>Restaurante</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recordset}}
                                <tr>
                                    <td>{{codigo}} </td>
                                    <td>CLI-{{consecutivo}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{montoPagado}}</td>
                                    <td>{{detalle}}</td>
                                    <td>{{fecha}}</td>
                                    <td>{{reservacion}}</td>
                                    <td>{{barra}}</td>
                                    <td>{{restaurante}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <h1
                            style="text-align: center; color: #A94442; border-radius: 1rem; background-color: #F3DEDE; ">
                            {{mensaje}}</h1>
                    </div>
                </div>
            </div>


        </div>
    </div>



    <script>
        var formulario = document.getElementById("frmClientes");
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodC").value = "";
            document.getElementById("inputNomC").value = "";
            document.getElementById("inputNomRe").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {


            if (document.getElementById("inputCodC").value == "" || document.getElementById("inputNomC").value == ""
            ) {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnEliminar.setAttribute("formaction", "../ListaClientes/eliminarClientes")
                btnEliminar.setAttribute("type", "submit");

            }
        }


    </script>
</body>

</html>