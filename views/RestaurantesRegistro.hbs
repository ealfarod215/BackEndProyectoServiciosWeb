<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RestaurantesRegistro.css">
    <title>Restaurantes</title>
</head>

<body>

    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Restaurante</h1>
    </div>

    <div id="contenedorLogin" class="container border d-flex ">
        <div id="imagenLogo">
            <img style="width: 80%; height: 60%;" src="/images/Restaurante.jpg" alt="">
        </div>
        <form id="frmRegistroRestaurante" class="form-inline container displayGrid " method="post" action="">
            <div class="container border">
                <div class="displayGrid ">



                    <div class="col-md-4 mb-3">
                        <input id="nombreRestaurante" name="nombreRestaurante" type="text" class="form-control"
                            placeholder="Nombre del Restaurante">
                    </div>

                    <div class="col-md-4 mb-3">
                        <input id="especialidadRestaurante" name="especialidadRestaurante" type="text"
                            class="form-control" placeholder="Especialidad">
                    </div>

                    <div class="col-md-4 mb-3">
                        <input id="direccionRestaurante" name="direccionRestaurante" type="text" class="form-control"
                            placeholder="Dirección">
                    </div>

                    <div class="col-md-4 mb-3">
                        <input id="telefonoRestaurante" name="telefonoRestaurante" type="text" class="form-control"
                            placeholder="Teléfono">
                    </div>
                    <div class="d-flex">
                        <input id="cbxActivoRestaurante" name="cbxActivoRestaurante" type="checkbox" class="">
                        <input id="inpEstadoRes" name="inpEstadoRes" type="text" class="form-control"
                            placeholder="Estado" disabled="true" value="Inactivo">
                    </div>
                    <div id="botonesLogin" class="d-flex">
                        <!--llamar funcion para limpiar textbox-->
                        <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                                style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                        <!--llamar post para realizar el insert-->
                        <button id="btnConfirmarInsertRestaurante" type="button" class="btn"
                            onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                                src="/images/confirmacion.svg" alt=""></button>

                        <!--llamar get para regresar a la pagina de listado-->
                        <a href="/ListaDeRestaurantes/listarRestaurantes"><button type="button" class="btn"><img
                                    style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button></a>
                    </div>
                </div>


            </div>




        </form>
    </div>




    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertRestaurante");

        var checkBox = document.getElementById("cbxActivoRestaurante");


        checkBox.addEventListener('click', () => {
            document.getElementById("inpEstadoRes").value = "Activo";
        });


        function limpiarInputs() {
            document.getElementById("nombreRestaurante").value = "";
            document.getElementById("especialidadRestaurante").value = "";
            document.getElementById("direccionRestaurante").value = "";
            document.getElementById("telefonoRestaurante").value = "";
            document.getElementById("inpEstadoRes").value = "Inactivo";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("nombreRestaurante").value == "" || document.getElementById("especialidadRestaurante").value == ""
                || document.getElementById("direccionRestaurante").value == "" || document.getElementById("telefonoRestaurante").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RestaurantesRegistro/insertarRestaurante")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>

</body>

</html>