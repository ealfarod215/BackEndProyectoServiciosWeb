<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaDeRestaurantes.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Restaurantes</title>
</head>

<body>


    <div id="SeccionPrincipalLR" class="container d-flex border">
        <div id="LSectionListaRestaurantes" class="">
            <img class="LogoRestaurante" src="/images/Restaurante.jpg" alt="">
        </div>
        <div id="RSectionListaRestaurantes" class="border">
            <div id="headerListSection" class="d-flex border">
                <div class="displayGrid headerSideSize">
                    <div class="marginL">
                        <!--llama al get para recargar la informacion de la tabla-->
                        <a href="/ListaDeRestaurantes/listarRestaurantes"><button class="marginIconos "><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/recargar.svg"
                                    alt=""></button></a>
                        <!--boton que llama a la funcion limpiar-->
                        <button id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img
                                style="width: 2.5rem; height: 2.5rem;" src="/images/escoba.svg" alt=""></button>
                    </div>
                    <div class="marginL">
                        <!--llamar render para salir del sistema-->
                        <a href="/Funcionalidades">
                            <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/error.svg" alt=""></button>
                        </a>
                        <!--Cargar render al formulario para ingresar restaurantes-->
                        <a href="/RestaurantesRegistro">
                            <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/mas.svg" alt=""></button>
                        </a>

                    </div>
                </div>
                <div id="littleForm">
                    <form id="frmLRestaurantes" method="post" action="/ListaDeRestaurantes/filtrarLista"
                        class="form-inline container displayGrid headerMidleSize needs-validation" novalidate>
                        <div class="d-flex headerMidleSize">
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="number" class="form-control" id="inputCodRest" name="inputCodRest"
                                        placeholder="Digite el Codigo" required>
                                </div>
                            </div>
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomRest" name="inputNomRest"
                                        placeholder="Digite el Nombre" required>
                                </div>
                            </div>
                            <div class="displayGrid">
                                <!--llama al post para realizar busqueda-->
                                <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                        style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                        alt=""></button>

                                <!--Cargar post para eliminar registro de restaurante-->
                                <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                    class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                        src="/images/menos.svg" alt=""></button>

                            </div>



                        </div>
                    </form>
                </div>

            </div>
            <div id="bodyListSection" class="overflow-auto">


                <table class="table table-hover" style="width:100%; height:auto;">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Consecutivo</th>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Especialidad</th>
                            <th>Telefono</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recordset}}
                        <tr>
                            <td>{{codigo}} </td>
                            <td>RES-{{consecutivo}}</td>
                            <td>{{nombre}}</td>
                            <td>{{direccion}}</td>
                            <td>{{especialidad}}</td>
                            <td>{{telefono}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <h1 style="text-align: center; color: #A94442; border-radius: 1rem; background-color: #F3DEDE; ">
                    {{mensaje}}</h1>
            </div>
        </div>

    </div>




    <script>
        var formulario = document.getElementById("frmLRestaurantes");
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodRest").value = "";
            document.getElementById("inputNomRest").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {

            btnEliminar.setAttribute("formaction", "../ListaDeRestaurantes/eliminarRestRegistro")
            btnEliminar.setAttribute("type", "submit");
        }


    </script>

    <script src="/javascripts/validaciones.js"></script>
</body>

</html>