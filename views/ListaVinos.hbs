<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaVinos.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Vinos</title>
</head>

<body>
    <div id="SeccionPrincipalVinos" class="container d-flex border">
        <div id="LSectionVinos" class="">
            <img class="LogoVinos" src="/images/copa-de-vino.svg" alt="">
        </div>
        <div id="RSectionVinos" class="border">
            <div id="headerListSection" class="d-block border">
                <div id="littleForm">
                    <form class="form-inline container displayGrid " method="post" action="/ListaVinos/filtrarLista">
                        <div class="d-flex MAXWandH">
                            <div class="displayGrid ">
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3">
                                        <input type="text" class="form-control" id="inputCodVino" name="inputCodVino"
                                            placeholder="Codigo del Vino">
                                    </div>
                                </div>
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <input type="text" class="form-control" id="inputNomVino" name="inputNomVino"
                                            placeholder="Nombre del Vino">
                                    </div>
                                </div>
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <input type="text" class="form-control" id="inputYearVino" name="inputYearVino"
                                            placeholder="Año">
                                    </div>
                                </div>
                            </div>
                            <div class="displayGrid headerEspacios">
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <select class="custom-select" id="inputSelectNacionalidad"
                                            name="inputSelectNacionalidad">
                                            <option selected>Nacionalidad</option>
                                            <option value="1">Costa Rica</option>
                                            <option value="2">China</option>
                                            <option value="3">Venezuela</option>
                                            <option value="4">Italia</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <select class="custom-select" id="inputNombreRest" name="inputNombreRest">
                                            <option selected>Restaurante</option>
                                            <option value="1">Piccola Stella</option>
                                            <option value="2">Turin Anivo</option>
                                            <option value="3">Notte di Fuoco</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <input type="text" class="form-control" id="inputPrecioVino"
                                            name="inputPrecioVino" placeholder="Precio">
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex headerEspacios">
                                <div class="displayGrid ">

                                    <div class=" displayGrid headerEspacios">

                                        <!--Cargar post para eliminar registro de buffet-->
                                        <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                            class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                                src="/images/menos.svg" alt=""></button>
                                        <!--llama al post para realizar busqueda-->
                                        <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                                style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                                alt=""></button>
                                    </div>
                                </div>
                            </div>

                    </form>
                    <di class="displayGrid">
                        <!--llama al get para recargar la informacion de la tabla-->
                        <a href="/ListaVinos/listarAllVinos"><button type="button" class="marginIconos "><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/recargar.svg"
                                    alt=""></button></a>
                        <!--boton que llama a la funcion limpiar-->
                        <button type="button" id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img
                                style="width: 2.5rem; height: 2.5rem;" src="/images/escoba.svg" alt=""></button>
                    </di>
                    <di class="displayGrid">
                        <a href="/RegistroVinos">
                            <button type="button" class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/mas.svg" alt=""></button>
                        </a>
                        <a href="/TiposDeBebidas">
                            <button type="button" class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/error.svg" alt=""></button>
                        </a>
                    </di>


                </div>


            </div>

        </div>
        <div id="bodyListSection">

            <div id="listViewVinos" class="border">
                <div id="mostrarContenidoVinos">
                    <table class="table table-hover" style="width:100%; height:auto;">
                        <thead>
                            <tr>
                                <th>Codígo</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Nacionalidad</th>
                                <th>Cosecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each recordset}}
                            <tr>
                                <td>{{codigo}} </td>
                                <td>{{nombre}}</td>
                                <td>{{precioBotella}}</td>
                                <td>{{pais}}</td>
                                <td>{{yearCosecha}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                    <h1 style="text-align: center; color: red;">{{mensaje}}</h1>

                </div>
            </div>
        </div>
    </div>
    </div>
    <script>
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodVino").value = "";
            document.getElementById("inputNomVino").value = "";
            document.getElementById("inputYearVino").value = "";
           document.getElementById("inputSelectNacionalidad").value = "Nacionalidad";
           document.getElementById("inputNombreRest").value = "Restaurante";
           document.getElementById("inputPrecioVino").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {


            if (document.getElementById("inputCodVino").value == "" || document.getElementById("inputNomVino").value == "" ||
                document.getElementById("inputYearVino").value == "" || document.getElementById("inputSelectNacionalidad").value == "" ||
                document.getElementById("inputNombreRest").value == "" || document.getElementById("inputPrecioVino").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnEliminar.setAttribute("formaction", "../ListaVinos/eliminarRestRegistro")
                btnEliminar.setAttribute("type", "submit");

            }
        }


    </script>
</body>

</html>