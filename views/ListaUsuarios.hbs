<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaUsuarios.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Usuarios</title>
</head>

<body>
    <div id="SeccionPrincipalUsuarios" class="container d-flex border">
        <div id="LSectionUsuarios" class="">
            <img class="LogoUsuarios" src="/images/usuario.svg" alt="">
        </div>
        <div id="RSectionUsuarios" class="border">
            <div id="headerListSection" class="d-block border">
                <div id="littleForm">
                    <form class="form-inline container displayGrid ">
                        <div class="d-flex MAXWandH">
                            <div class="displayGrid ">
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3">
                                        <input type="text" class="form-control" id="inputCodUsuario"
                                            placeholder="Codigo del Usuario">
                                    </div>
                                </div>
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <input type="text" class="form-control" id="inputNomUsuario"
                                            placeholder="Nombre del Usuario">
                                    </div>
                                </div>

                            </div>
                            <div class="displayGrid headerEspacios">
                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <input type="text" class="form-control" id="inputNickNameUsuario"
                                            placeholder="Nickname">
                                    </div>
                                </div>

                                <div class="marginIconos">

                                    <div class="input-group input-group-sm mb-3  ">
                                        <input type="text" class="form-control" id="inputPrivilegios"
                                            placeholder="Privilegios">
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex headerEspacios">
                                <div class="displayGrid ">
                                    <button class="marginIconos "><img style="width: 2.5rem; height: 2.5rem;"
                                            src="/images/recargar.svg" alt=""></button>
                                    <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                            src="/images/escoba.svg" alt=""></button>
                                </div>
                                <div class="displayGrid headerEspacios">
                                    <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                            src="/images/mas.svg" alt=""></button>
                                    <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                            src="/images/menos.svg" alt=""></button>

                                </div>
                                <div class=" displayGrid headerEspacios">
                                    <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                            src="/images/error.svg" alt=""></button>
                                    <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                            src="/images/confirmacion.svg" alt=""></button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <div id="bodyListSection">


                <div class="row">
                    <div class="col">Cod√≠go</div>
                    <div class="col">Nombre</div>
                    <div class="col">Aellido 1</div>
                    <div class="col">Apellido 2</div>
                    <div class="col">Telefono Fijo</div>
                    <div class="col">Telefono Celular</div>


                </div>
                <div id="listViewUsuarios" class="border">
                    <div id="mostrarContenidoUsuarios"></div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>