<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroConsecutivos.css">
    <title>Registro de Consecutivos</title>
</head>

<body class="container-fluid">
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Consecutivos</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/ajustes2.svg" alt="">
            </div>
            <div id="contenedorForm" class=" d-flex">
                <form class="form-inline d-flex needs-validation" method="post" action="" novalidate>
                    <div id="BmenuUno" class="container border">
                        <div class="displayGrid ">
                            <div class="">
                                <label>Informaci√≥n del Consecutivo</label>
                            </div>
                            <div class="col-md-4 mb-3">
                                <input id="inputTipoConsecutivo" name="inputTipoConsecutivo" type="text"
                                    class="form-control" placeholder="TipoConsecutivo" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <input id="inputValorConsecutivo" name="inputValorConsecutivo" type="number"
                                    class="form-control" placeholder="Valor" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <input id="inputDesConsecutivo" name="inputDesConsecutivo" type="text"
                                    class="form-control" placeholder="Descripcion" required>
                            </div>
                            <div class="d-flex">

                                <input id="inputPoseePrefijo" name="inputPoseePrefijo" type="hidden"
                                    class="form-control">
                                <label for="">El consecutivo posee prefijo</label>
                                <label for="">Si<input id="inputPoseePrefijoSi" name="inputPoseePrefijoSi"
                                        type="checkbox" class="form-control"></label>
                                <label for="">No<input id="inputPoseePrefijoNo" name="inputPoseePrefijoNo"
                                        type="checkbox" class="form-control"></label>
                            </div>
                            <div class="col-md-4 mb-3">
                                <input id="inputPrefConsecutivo" name="inputPrefConsecutivo" type="text"
                                    class="form-control" placeholder="Prefijo" required>
                            </div>

                        </div>
                    </div>

                    <div id="botonesLogin" class="d-flex">
                        <!--llamar funcion para limpiar textbox-->
                        <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                                style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                        <!--llamar post para realizar el insert-->
                        <button id="btnConfirmarInsertConsecutivos" type="button" class="btn"
                            onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                                src="/images/confirmacion.svg" alt=""></button>

                        <!--llamar get para regresar a la pagina de listado-->
                        <a href="/ListaConsecutivos/listarAllConsecutivos"><button type="button" class="btn"><img
                                    style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                        </a>
                        <!--<button type="button" class="btn"><img style="width: 3rem; height: 3rem;" src="/images/Lupa.svg"
                            alt=""></button>-->
                    </div>
                </form>
            </div>

        </div>
    </div>
    <script>

        var btnInsertar = document.getElementById("btnConfirmarInsertConsecutivos");
        var checksi = document.getElementById("inputPoseePrefijoSi");
        var checkno = document.getElementById("inputPoseePrefijoNo");

        checksi.addEventListener('click', () => {
            document.getElementById("inputPoseePrefijo").value = "Si";
            checkno.checked = false;

        });

        checkno.addEventListener('click', () => {
            document.getElementById("inputPoseePrefijo").value = "No";
            checksi.checked = false;
        });


        function limpiarInputs() {
            document.getElementById("inputTipoConsecutivo").value = "";
            document.getElementById("inputValorConsecutivo").value = "";
            document.getElementById("inputDesConsecutivo").value = "";
            document.getElementById("inputPoseePrefijo").checked = false;
            document.getElementById("inputPrefConsecutivo").value = "";


            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            btnInsertar.setAttribute("formaction", "../RegistroConsecutivos/insertarConsecutivos")
            btnInsertar.setAttribute("type", "submit");

        }

    </script>

    <script src="/javascripts/alertas.js"></script>
    <script src="/javascripts/validaciones.js"></script>
</body>


</html>