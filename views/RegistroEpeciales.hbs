<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroEpeciales.css">
    <title>Registro de Especialidades</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Especialidades</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;"
                    src="/images/restaurante-cubiertos-simbolo-circular-de-una-cuchara-y-un-tenedor-en-un-circulo.svg"
                    alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label class="smd-8 mb-4">Información de la Especialidad</label>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputNombreEsp" name="inputNombreEsp" type="text" class="form-control"
                                placeholder="Nombre del Platillo">
                        </div>
                        <div class="col-md-4 mb-3">
                            <textarea id="inputIngredienteEsp" name="inputIngredienteEsp" class="form-control"
                                placeholder="Descripción" aria-label="With textarea"></textarea>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputPrecioEsp" name="inputPrecioEsp" type="text" class="form-control"
                                placeholder="Precio">
                        </div>
                        <div class="col-md-4 mb-3">
                            <textarea id="inputDescripcionEsp" name="inputDescripcionEsp" class="form-control"
                                placeholder="Detalle" aria-label="With textarea"></textarea>
                        </div>
                    </div>
                </div>
                <div id="BmenuDos">
                    <div class="displayGrid MAXWandH">
                        <label>Foto del Especial</label>
                        <div class="MAXWandH">
                            <input type="text" class="MAXWandH" placeholder="">
                        </div>
                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertEspeciales" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaEspeciales/listarAllEspeciales"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                    <button type="button" class="btn"><img style="width: 3rem; height: 3rem;" src="/images/Lupa.svg"
                            alt=""></button>
                </div>
            </form>
        </div>
    </div>

    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertEspeciales");
        function limpiarInputs() {
            document.getElementById("inputNombreEsp").value = "";
            document.getElementById("inputIngredienteEsp").value = "";
            document.getElementById("inputPrecioEsp").value = "";
            document.getElementById("inputDescripcionEsp").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombreEsp").value == "" || document.getElementById("inputIngredienteEsp").value == ""
                || document.getElementById("inputPrecioEsp").value == "" || document.getElementById("inputDescripcionEsp").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroEpeciales/insertarEpeciales")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>

    <script src="/javascripts/alertas.js"></script>
</body>

</html>