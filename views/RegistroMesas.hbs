<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroMesas.css">
    <title>Registro de Mesas</title>
</head>

<body class="container-fluid">
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro de Mesas</h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/comedor.svg" alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Informaci√≥n de las Mesas</label>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputNombreMesa" name="inputNombreMesa" type="text" class="form-control"
                                placeholder="Nombre">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputNumMesa" name="inputNumMesa" type="text" class="form-control"
                                placeholder="Numero">
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputCanSillas" name="inputCanSillas" type="text" class="form-control"
                                placeholder="Cantidad Sillas">
                        </div>
                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectRest" name="inputSelectRest">
                                <option selected>Nombre del Restaurante</option>
                                <option value="1">Piccola Stella</option>
                                <option value="2">Turin Anivo</option>
                                <option value="3">Notte di Fuoco</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertMesa" name="btnConfirmarInsertMesa" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaMesas/listarAllMesas"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                </div>
            </form>
        </div>

    </div>
    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertMesa");

        function limpiarInputs() {
            document.getElementById("inputNombreMesa").value = "";
            document.getElementById("inputNumMesa").value = "";
            document.getElementById("inputCanSillas").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombreMesa").value == "" || document.getElementById("inputNumMesa").value == ""
                || document.getElementById("inputCanSillas").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroMesas/insertarMesas")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>
</body>

</html>