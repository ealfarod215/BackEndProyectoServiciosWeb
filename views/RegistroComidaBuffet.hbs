<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroComidaBuffet.css">
    <title>Comida Buffet</title>
</head>

<body>

    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Comida Buffet</h1>
        <h1 style="text-align: center; color: #A94442; border-radius: 1rem; background-color: #F3DEDE; ">
            {{mensaje}}</h1>
        <h1 style="text-align: center; color: #3C763D; border-radius: 1rem; background-color: #DFF0D8; ">
            {{mensajeExito}}</h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/bufe.svg" alt="">
            </div>
            <form class="form-inline d-flex " method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Informaci√≥n de la Comida Tipo Buffet</label>
                        </div>

                        <div class="col-md-4 mb-3">
                            <input type="text" class="form-control" placeholder="Nombre" id="inputNombre"
                                name="inputNombre">
                        </div>

                        <div class="col-md-4 mb-3">
                            <input type="text" class="form-control" placeholder="Precio" id="inputPrecio"
                                name="inputPrecio">
                        </div>

                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectTCB" name="inputSelectTCB">
                                <option selected>Tipo</option>
                                {{tipo}}
                                {{#each tipo}}
                                <option value="{{codTbTipCom}}">{{nomTbTipCom}}</option>

                                {{/each}}
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectUM" name="inputSelectUM">
                                <option selected>Unidad de Medida</option>
                                {{UM}}
                                {{#each UM}}
                                <option value="{{codUM}}">{{unidad}}</option>

                                {{/each}}
                                <!-- <option value="5">gramo</option>
                                <option value="6">amperio</option>
                                <option value="7">metro</option>
                                <option value="8">kelvin </option>-->

                            </select>
                        </div>

                    </div>


                </div>
                <div id="BmenuDos">
                    <div class="displayGrid MAXWandH">
                        <label>Foto del Platillo</label>
                        <div class="MAXWandH">
                            <input type="text" class="MAXWandH" placeholder="">
                        </div>
                    </div>
                </div>

                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertBufet" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/Buffet/listarAllBufet"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>
                    <button type="button" class="btn"><img style="width: 3rem; height: 3rem;" src="/images/Lupa.svg"
                            alt=""></button>

                </div>
        </div>
        </form>
    </div>
    </div>





    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertBufet");




        function limpiarInputs() {
            document.getElementById("inputNombre").value = "";
            document.getElementById("inputPrecio").value = "";

            var tipo = document.getElementById("inputSelectTCB").value;
            var UM = document.getElementById("inputSelectUM").value;
            alert("Cajas de Texto limpias." + tipo + " " + UM);
        }

        function llamadoInsertarFunction() {


            if (document.getElementById("inputNombre").value == "" || document.getElementById("inputPrecio").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnInsertar.setAttribute("formaction", "../RegistroComidaBuffet/insertarBuffet")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>
</body>

</html>