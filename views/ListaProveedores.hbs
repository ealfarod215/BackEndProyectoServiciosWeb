<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/ListaProveedores.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <title>Lista de Proveedores</title>
</head>

<body>

    <h1 class="text-center align-content-center">Lista de Proveedores</h1>
    <div id="SeccionPrincipalBC" class=" d-flex ">

        <div id="LSectionBC" class="">
            <img class="LogoBC img-fluid" alt="Responsive image" src="/images/puestos.svg" alt="">
        </div>
        <div id="RSectionBC" class="border" style="width: 100%;">
            <div id="headerListSection" class="d-flex ">
                <div class="displayGrid headerSideSize">
                    <div class="marginL">
                        <!--llama al get para recargar la informacion de la tabla-->
                        <a href="/ListaProveedores/listarAllProveedores"><button class="marginIconos "><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/recargar.svg"
                                    alt=""></button></a>
                        <!--boton que llama a la funcion limpiar-->
                        <button id="btnLimpiar" onclick="limpiarInputs()" class="marginIconos"><img
                                style="width: 2.5rem; height: 2.5rem;" src="/images/escoba.svg" alt=""></button>
                    </div>
                    <div class="marginL">
                        <a href="/RegistroProveedores">
                            <button class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                    src="/images/mas.svg" alt=""></button>
                        </a>

                        <a href="/VentanaProveedores"><button class="marginIconos"><img
                                    style="width: 2.5rem; height: 2.5rem;" src="/images/error.svg" alt=""></button>
                        </a>

                    </div>
                </div>
                <div id="littleForm">
                    <form class="form-inline container displayGrid headerMidleSize" method="post"
                        action="/ListaProveedores/filtrarLista">
                        <div class="d-flex headerMidleSize">
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputCodProveedor"
                                        name="inputCodProveedor" placeholder="Digite el Codigo">
                                </div>
                            </div>
                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputNomProveedor"
                                        name="inputNomProveedor" placeholder="Digite el Nombre">
                                </div>
                            </div>

                            <div class="marginIconos">

                                <div class="form-group  ">
                                    <input type="text" class="form-control" id="inputCedProveedor"
                                        name="inputCedProveedor" placeholder="Digite la cédula">
                                </div>
                            </div>

                            <div class="displayGrid ">
                                <!--llama al post para realizar busqueda-->
                                <button id="btnRealizarBusqueda" type="submit" class="marginIconos"><img
                                        style="width: 2.5rem; height: 2.5rem;" src="/images/confirmacion.svg"
                                        alt=""></button>

                                <!--Cargar post para eliminar registro de buffet-->
                                <button id="btnEliminar" type="button" onclick="llamadoEliminarFunction()"
                                    class="marginIconos"><img style="width: 2.5rem; height: 2.5rem;"
                                        src="/images/menos.svg" alt=""></button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <div id="bodyListSection">

                <div id="listViewRest" class="border">
                    <div id="mostrarContenidoBC" class="overflow-auto">
                        <table class="table table-hover" style="width:100%; height:auto;">
                            <thead>
                                <tr>
                                    <th>Codígo</th>
                                    <th>Consecutivo</th>
                                    <th>Cedula</th>
                                    <th>Nombre</th>
                                    <th>Apellido 1</th>
                                    <th>Apellido 2</th>
                                    <th>Oficina</th>
                                    <th>Fax</th>
                                    <th>Celular</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recordset}}
                                <tr>
                                    <td>{{codigo}} </td>
                                    <td>PRO-{{consecutivo}}</td>
                                    <td>{{cedula}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{apellidoUno}}</td>
                                    <td>{{apellidoDos}}</td>
                                    <td>{{oficina}}</td>
                                    <td>{{fax}}</td>
                                    <td>{{celular}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <h1
                            style="text-align: center; color: #A94442; border-radius: 1rem; background-color: #F3DEDE; ">
                            {{mensaje}}</h1>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        var btnEliminar = document.getElementById("btnEliminar");

        function limpiarInputs() {
            document.getElementById("inputCodProveedor").value = "";
            document.getElementById("inputNomProveedor").value = "";
            document.getElementById("inputCedProveedor").value = "";
            alert("Cajas de Texto limpias.");
        }

        function llamadoEliminarFunction() {


            if (document.getElementById("inputCodProveedor").value == "" || document.getElementById("inputNomProveedor").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                btnEliminar.setAttribute("formaction", "../ListaProveedores/eliminarRestRegistro");
                btnEliminar.setAttribute("type", "submit");

            }
        }


    </script>
</body>

</html>