<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroLimpiezaeHigiene.css">
    <title>RegistroLimpiezaeHigiene</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Limpieza e Higiene</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div>
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/escobaLimpieza.svg" alt="">
            </div>
            <form class="form-inline d-flex   height: 70%;" method="post" action="">
                <div id="BmenuUno" class="container border">
                    <div class="displayGrid ">
                        <div class="">
                            <label class="smd-9 mb-4">Información de los Artículos</label>
                        </div>

                        <div class="col-md-6 mb-3">
                            <select class="custom-select" id="inputNombreRest" name="inputNombreRest">
                                <option selected>Restaurante</option>
                                {{#each restaurante}}
                                <option value="{{codRes}}">{{nomRes}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-9 mb-3">
                            <input id="inputArticuloLyH" name="inputArticuloLyH" type="text" class="form-control"
                                placeholder="Nombre">
                        </div>
                        <div class="col-md-7 mb-3">
                            <select class="custom-select" id="inputSelectMarca" name="inputSelectMarca">
                                <option selected>Marca</option>
                                {{#each marca}}
                                <option value="{{codMarca}}">{{nomMarca}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-9 mb-3">

                            <input id="inputCantidad" name="inputCantidad" type="text" class="form-control "
                                placeholder="Cantidad">
                        </div>
                        <div class="col-md-8 mb-3">
                            <textarea id="inputDescripcion" name="inputDescripcion" class="form-control"
                                placeholder="Descripción" aria-label="With textarea"></textarea>
                        </div>

                    </div>
                </div>
                <div id="BmenuDos">
                    <div class="col-md-8 mb-3">
                        <select class="custom-select" id="inputSelectTipo" name="inputSelectTipo">
                            <option selected>Tipo</option>
                            {{#each tipoLimHig}}
                            <option value="{{codTipLim}}">{{nomTipLim}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-8 mb-3">
                        <input id="inputCanMedida" name="inputCanMedida" type="text" class="form-control"
                            placeholder="Cantidad de Medida">
                    </div>
                    <div class="col-md-8 mb-3">
                        <select class="custom-select" id="inputSelectUnidadDeMedida" name="inputSelectUnidadDeMedida">
                            <option selected>Unidad de Medida</option>
                            {{#each unidadMedida}}
                            <option value="{{codUM}}">{{unidad}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group  ">
                        <input id="inputInternoAlRestaurante" name="inputInternoExterno" type="radio" value="">
                        <label for="">Si</label>

                        <input id="inputExternoAlRestaurante" name="inputInternoExterno" type="radio" value="">
                        <label for="">No</label>

                    </div>
                    <div class="col-md-4 mb-3 d-flex">
                        <input id="adentro" name="adentro" type="text" class="form-control" placeholder="Es liquido?"
                            disabled="true">

                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <div id="botonesLogin" class="d-flex">
                        <!--llamar funcion para limpiar textbox-->
                        <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                                style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                        <!--llamar post para realizar el insert-->
                        <button id="btnConfirmarInsertBufet" type="button" class="btn"
                            onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                                src="/images/confirmacion.svg" alt=""></button>

                        <!--llamar get para regresar a la pagina de listado-->
                        <a href="/ListaLimpiezaeHigiene/listarAllLimpHigiene"><button type="button" class="btn"><img
                                    style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                        </a>
                        <button type="button" class="btn"><img style="width: 3rem; height: 3rem;" src="/images/Lupa.svg"
                                alt=""></button>

                    </div>
            </form>
        </div>
    </div>

    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertBufet");
        var dentro = document.getElementById("inputInternoAlRestaurante");
        var fuera = document.getElementById("inputExternoAlRestaurante");

        dentro.addEventListener('click', () => {
            document.getElementById("adentro").value = "Si";
        });

        fuera.addEventListener('click', () => {
            document.getElementById("adentro").value = "No";
        });





        function limpiarInputs() {

            document.getElementById("inputArticuloLyH").value = "";
            document.getElementById("inputCantidad").value = "";
            document.getElementById("inputCanMedida").value = "";
            document.getElementById("inputDescripcion").value = "";
            document.getElementById("adentro").value = "";
            document.getElementById("inputInternoAlRestaurante").checked = false;
            document.getElementById("inputExternoAlRestaurante").checked = false;

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            if (document.getElementById("inputArticuloLyH").value == "" || document.getElementById("inputCantidad").value == ""
                || document.getElementById("inputCanMedida").value == "" || document.getElementById("inputDescripcion").value == ""
                || document.getElementById("adentro").value == "") {
                alert("Debe llenar toda la informacion!!!");
            } else {
                alert("Realizo el post");
                btnInsertar.setAttribute("formaction", "../RegistroLimpiezaeHigiene/insertarLyH")
                btnInsertar.setAttribute("type", "submit");
            }
        }

    </script>

    <script src="/javascripts/alertas.js"></script>
</body>

</html>