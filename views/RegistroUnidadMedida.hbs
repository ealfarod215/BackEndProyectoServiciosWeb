<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/1a7b3b1445.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/RegistroUnidadMedida.css">
    <title>Registro Unidad de Medida</title>
</head>

<body>
    <div class="container navbar-expand-xl">
        <h1 class="text-center align-content-center">Registro Unidad de Medida</h1>
    </div>
    <div class="container errorR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.errorRegistro}}
        </h1>
    </div>
    <div class="container exitoR" role="alert">
        <h1 class="text-center align-content-center">
            {{messages.exitoRegistro}}
        </h1>
    </div>
    <div class="d-flex MAXWandH">
        <div id="contenedorLogin" class="container border d-flex ">
            <div id="imagenLogo">
                <img style="width: 80%; height: 60%;" src="/images/balanza.svg" alt="">
            </div>
            <form class="form-inline d-flex needs-validation" method="post" action="" novalidate>
                <div id="BmenuUno" class="border d-flex">
                    <div class="displayGrid ">
                        <div class="">
                            <label>Información de Unidades de Medida</label>
                        </div>

                        <div class="col-md-4 mb-3">
                            <input id="inputNombreUniMed" type="text" class="form-control" 
                            name="inputNombreUniMed"placeholder="Nombre" required>
                        </div>

                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectEscala" name="inputSelectEscala" required>
                                 <option value="">Escala</option>
                                {{#each escala}}
                                <option value="{{codEscala}}">{{detEscala}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <select class="custom-select" id="inputSelectDetalle" name="inputSelectDetalle" required>
                                 <option value="">Detalle</option>
                                {{#each detalle}}
                                <option value="{{codDetalle}}">{{detDetalle}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputSimboloUniMed" type="text" class="form-control" 
                            name="inputSimboloUniMed" placeholder="Simbolo" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input id="inputSimbologiaUniMed" type="text" class="form-control"
                            name="inputSimbologiaUniMed" placeholder="Simbología" required>
                        </div>
                    </div>
                </div>
                <div id="botonesLogin" class="d-flex">
                    <!--llamar funcion para limpiar textbox-->
                    <button id="btnLimpiarRegistroInputs" type="button" class="btn" onclick="limpiarInputs()"><img
                            style="width: 3rem; height: 3rem;" src="/images/escoba.svg" alt=""></button>

                    <!--llamar post para realizar el insert-->
                    <button id="btnConfirmarInsertUnidadMedida" type="button" class="btn"
                        onclick="llamadoInsertarFunction()"><img style="width: 3rem; height: 3rem;"
                            src="/images/confirmacion.svg" alt=""></button>

                    <!--llamar get para regresar a la pagina de listado-->
                    <a href="/ListaUnidadesMedida/listarAllListaUnidadesMedida"><button type="button" class="btn"><img
                                style="width: 3rem; height: 3rem;" src="/images/error.svg" alt=""></button>
                    </a>

                </div>
            </form>
        </div>
    </div>
    <script>
        var btnInsertar = document.getElementById("btnConfirmarInsertUnidadMedida");




        function limpiarInputs() {

            document.getElementById("inputNombreUniMed").value = "";
            document.getElementById("inputSimboloUniMed").value = "";
            document.getElementById("inputSimbologiaUniMed").value = "";

            alert("Cajas de Texto limpias.");
        }

        function llamadoInsertarFunction() {

            btnInsertar.setAttribute("formaction", "../RegistroUnidadMedida/insertarUnidadMedida")
            btnInsertar.setAttribute("type", "submit");

        }

    </script>

    <script src="/javascripts/alertas.js"></script>
    <script src="/javascripts/validaciones.js"></script>
</body>

</html>